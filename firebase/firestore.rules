rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Daily animals collection - read-only for clients
    match /daily_animals/{date} {
      allow read: if true; // Allow all users to read daily animals
      allow write: if false; // Only admin can write (via Firebase Admin SDK)
    }
    
    // User progress collection - users can only access their own data
    match /user_progress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admin collection for managing animals
    match /admin/{document=**} {
      allow read, write: if false; // Only admin can access
    }
  }
}


